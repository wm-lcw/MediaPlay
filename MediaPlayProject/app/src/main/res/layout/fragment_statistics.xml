<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.tools.StatisticsFragment"
    android:background="@drawable/bg_statistics_fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--顶部功能栏-->
        <RelativeLayout
            android:id="@+id/rl_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60">
            <ImageView
                android:id="@+id/iv_statistics_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_20"
                android:src="@drawable/back_view_style_grey"/>
            <TextView
                android:id="@+id/tv_statistics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="统计页面"
                android:textSize="@dimen/sp_18"/>
            <ImageView
                android:id="@+id/iv_statistics_more"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/more_view_style_grey"/>
        </RelativeLayout>

        <!--歌曲播放次数-->
        <RelativeLayout
            android:id="@+id/rl_play_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_top_title"
            android:layout_marginTop="@dimen/dp_30">
            <ImageView
                android:id="@+id/iv_play_total"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/ic_list_like_choose"/>

            <TextView
                android:id="@+id/tv_play_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_play_total"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

        <!--歌手播放次数-->
        <RelativeLayout
            android:id="@+id/rl_artist_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_play_total"
            android:layout_marginTop="@dimen/dp_30" >
            <ImageView
                android:id="@+id/iv_artist_total"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/ic_list_like_choose"/>

            <TextView
                android:id="@+id/tv_artist_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_artist_total"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

        <!--歌手中最多播放-->
        <RelativeLayout
            android:id="@+id/rl_play_from_artist_total"
            android:layout_below="@+id/rl_artist_total"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_play_from_artist_total"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/ic_list_like_choose"/>

            <TextView
                android:id="@+id/tv_play_from_artist_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_play_from_artist_total"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

        <!--播放时长-->
        <RelativeLayout

            android:id="@+id/rl_play_time"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_play_time"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_5"
                android:src="@mipmap/ic_list_like_choose"/>

            <TextView
                android:id="@+id/tv_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_play_time"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>