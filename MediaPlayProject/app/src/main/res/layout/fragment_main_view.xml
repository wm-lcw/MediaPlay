<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_main"
        android:orientation="vertical">

        <!--搜索栏-->
        <RelativeLayout
            android:id="@+id/ll_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@drawable/sidebar_button_style" />

            <com.example.mediaplayproject.view.CustomizeEditText
                android:id="@+id/custom_edit_text"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@null"
                android:hint="music"
                android:maxLength="5"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/iv_main_view_more"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/more_view_style"/>

        </RelativeLayout>

        <!--ViewPager-->
        <LinearLayout
            android:id="@+id/ll_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom_view"
            android:layout_below="@+id/ll_top_title"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/main_view_pager"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_music_list_view"
            android:orientation="vertical">
            <!--底部播放状态栏-->
            <LinearLayout
                android:id="@+id/ll_simple_play_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_play_revolve"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/ic_customer_list" />

                <LinearLayout
                    android:layout_width="@dimen/dp_170"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30">

                    <TextView
                        android:id="@+id/tv_current_music_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_play_music"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@mipmap/media_play" />

                <ImageView
                    android:id="@+id/iv_current_list"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_25"
                    android:background="@drawable/play_list_style" />

            </LinearLayout>


            <!--分割线-->
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/bg_line" />

            <!--功能状态栏-->
            <LinearLayout
                android:id="@+id/ll_function_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_discovery"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_55"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_discovery_white" />

                <ImageView
                    android:id="@+id/iv_personal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_55"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_customer_white" />

                <ImageView
                    android:id="@+id/iv_tools"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_tools_white" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>


    </RelativeLayout>

    <!--侧滑栏-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/dp_250"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>