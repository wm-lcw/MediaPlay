<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popup_window"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:id="@+id/ll_listWindow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_default_list"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/white"
                android:text="默认列表"
                android:textSize="@dimen/sp_18"/>
            <View
                android:layout_marginLeft="5dp"
                android:layout_width="2dp"
                android:layout_height="@dimen/dp_30"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_favorite_list"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/white"
                android:text="收藏列表"
                android:textSize="@dimen/sp_18"/>
            <ImageView
                android:id="@+id/iv_local_music"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/set_list_close_style"/>
            <ImageView
                android:layout_weight="2"
                android:id="@+id/iv_list_close"
                android:src="@mipmap/close"
                android:layout_width="0dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/cardview_light_background"/>
        <ListView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/lv_musicList"
            android:divider="@null"
            android:cacheColorHint="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ListView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/lv_favoriteList"
            android:divider="@null"
            android:cacheColorHint="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>