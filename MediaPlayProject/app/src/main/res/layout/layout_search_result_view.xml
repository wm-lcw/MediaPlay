<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_listWindow"
        android:layout_width="@dimen/dp_370"
        android:layout_height="280dp"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_search_result_view"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_19"
                android:text="SearchResult" />
            <ImageView
                android:id="@+id/iv_close_search"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_30"
                android:src="@mipmap/ic_close_nor"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_search_result_recycler_view"
            android:layout_below="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>



</RelativeLayout>