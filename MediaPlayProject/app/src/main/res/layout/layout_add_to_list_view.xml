<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_add_list_popup_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_add_listWindow"
        android:layout_width="@dimen/dp_340"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_list"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/ll_add_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@mipmap/ic_back_pre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center"
                android:text="添加到歌单"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20" />

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_add_musicList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_add_list_title"
            android:cacheColorHint="#00000000"
            android:divider="@null" />
    </RelativeLayout>


</RelativeLayout>